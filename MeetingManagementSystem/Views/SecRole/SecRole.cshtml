@model MeetingManagementSystem.Models.SecRole
@{
    ViewBag.Title = "SecRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Role</h2>*@

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/lib/Messages.js"></script>
<script src="~/Scripts/lib/notifit.js"></script>
<script src="~/Scripts/lib/AjaxManager.js"></script>
<link href="~/Content/notifIt.css" rel="stylesheet" />
<script src="~/Scripts/moment.js"></script>

@Styles.Render("~/styles/DataTable")

<style>
    .dt-center {
        text-align: center;
    }
  
    .spnDataTableEdit {
        font-weight: bold;
        color: #0083bd;
        margin-left: 10px;
        cursor: pointer;
    }

    .spnDataTableDelete {
        font-weight: bold;
        color: red;
        margin-left: 10px;
        cursor: pointer;
    }

    .txtDefStyle {
        width: 95%;
        float: left;
    }

    .required {
        color: red;
        float: left;
        font-weight: bold;
        font-size: 19px;
    }
</style>
@*<div class="row" style="position: relative;">*@
<div class="row" style="margin-bottom: 100px">
    <div class="col-md-12" style="padding: 0 10px 0">

        @*modal start*@
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Add Role</h4>
                    </div>

                    <div class="modal-body">
                        <form id="secRoleForm">
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Role Name : </label>
                                    <div class="col-md-8">
                                        <input class="form-control txtDefStyle" id="RoleNameTxt" name="RoleName" type="text" value="" placeholder="RoleName" /> <span class="required">*</span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Status : </label>
                                    <div class="col-md-8">
                                        <input id="Status" type="hidden" name="Status" />
                                        <input id="StatusId" type="checkbox" checked/> <br>

                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-8">
                                        <div class="pull-right" style="margin-right: 18px">
                                            <button style="margin-right: 5px; width: 70px" id="saveButton" type="button" class="btn btn-success">Save</button>
                                            <input style="width: 70px" id="clearButton" type="reset" value="Clear" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        @*modal end*@

        <div class="row" style="margin-bottom:30px">
            <div class="col-md-offset-5 col-md-7">
                <h2 class="title">Role</h2>
            </div>
        </div>

       


                
            </div>
    </div>

    <div class="col-md-6" style="margin-top: 0px">
        <div class="panel panel-info" style="margin-top: 8px">
            @*<div class="panel-heading text-center"><span class="panelHeadText">Role</span></div>*@
            <div class="panel-body">
                <div>

                    <button id="openModalButton" data-toggle="modal" data-target="#myModal" class="btn btn-success">Add New </button>
                </div>
                <div class="table table-responsive">
                    <table id="tableElement" class="table table-bordered table-striped table-condensed" style="width: 100%"></table>
                </div>
            </div>
        </div>
    </div>


</div>

@Scripts.Render("~/bundles/DataTable")
@Html.IncludeVersionedJs("/Scripts/Custom/SecRole.js")


